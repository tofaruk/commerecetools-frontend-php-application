{% extends "layout.html.twig" %}
{% block content %}
    <h2>Post Page</h2>
    {% if posts %}
    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Title</th>
            <th>Time</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>
                    <a href="{{ base_url('/post/details') }}/{{ post.id }}">{{ post.title }}</a>
                </td>
                <td>{{ time_ago(post.created) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}

{% endblock %}